
@model SignUpViewModel


@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
   

}

<div class="main-w3layouts wrapper">
	<h1>Creative SignUp Form</h1>
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-action="SignUp" method="post">
				<div asp-validation-summary="ModelOnly"></div>
				<input class="text mb-2" type="text" asp-for="FirstName" placeholder="First Name" required="">
				<input class="text mb-2" type="text" asp-for="LastName" placeholder="Last Name" required="">
				<input class="text mb-2" type="text" asp-for="UserName" placeholder="Username" required="">
				<input class="text email" type="email" asp-for="Email" placeholder="Email" required="">
				<input class="text" type="password" asp-for="Password" placeholder="Password" required="">
				<input class="text w3lpass" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
				<div class="wthree-text">
					<label class="anim">
						<input asp-for="ISAgree" type="checkbox" class="checkbox" required="">
						<span>I Agree To The Terms & Conditions</span>
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="SIGNUP">
			</form>
			<p>Don't have an Account? <a href="#"> Login Now!</a></p>
		</div>
	</div>
	<!-- copyright -->
	<div class="colorlibcopy-agile">
		<p>© 2018 Colorlib Signup Form. All rights reserved | Design by <a href="https://colorlib.com/" target="_blank">Colorlib</a></p>
	</div>
	<!-- //copyright -->
	<ul class="colorlib-bubbles">
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
	</ul>
</div>


@section ValidationScripts {
	<partial name="_ValidationScriptsPartial" />
}
