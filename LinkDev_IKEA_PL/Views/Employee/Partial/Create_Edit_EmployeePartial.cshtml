@model UpdateEmplooyeeDTO
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="card shadow-sm border-0 rounded-3">
    <div class="card-body">
        <form  method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

            @* Name *@
            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="Name"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="Enter employee name..." />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            @* Image *@
            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="form-label fw-bold"></label>
                <input asp-for="ImageUrl" type="file" class="form-control" accept="image/*" />
                @* <span asp-validation-for="ImageUrl" class="text-danger"></span> *@
            </div>


            @* Email *@
            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="Email"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter employee email..." />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            @* PhoneNumber *@
            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="PhoneNumber"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                    <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="Enter employee phone number..." />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            @* Address *@
            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="Address"></label>
                <textarea asp-for="Address" class="form-control" placeholder="Enter employee address..." rows="3"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="HiringDate"></label>
                <input asp-for="HiringDate" class="form-control" type="date" />
                <span asp-validation-for="HiringDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="Age"></label>
                <input asp-for="Age" class="form-control" type="number" min="18" max="100" placeholder="Enter employee age..." />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="Salary"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                    <input asp-for="Salary" class="form-control" type="number" step="0.01" placeholder="Enter employee salary..." />
                </div>
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="Gender"></label>
                <select asp-for="Gender" class="form-select">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DepartmentId" class="control-label mb-2"></label>
                <select asp-for="DepartmentId" asp-items="ViewBag.Departments"  class="form-control">
                    <option value="">Select Department</option>
                </select>
            </div>

            @* EmployeeType *@
            <div class="form-group mb-3">
                <label class="form-label fw-bold" asp-for="EmployeeType"></label>
                <select asp-for="EmployeeType" class="form-select">
                    <option value="">Select Employee Type</option>
                    <option value="PartTime">PartTime</option>
                    <option value="FullTime">FullTime</option>
                </select>
            </div>

            @* IsActive *@
            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label class="form-check-label fw-bold" asp-for="IsActive">Is Active</label>
            </div>

            @* Buttons *@
            <div class="mt-3 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <button asp-action="Edit" type="submit" class="btn btn-success">
                    <i class="fas fa-check-circle"></i> Update
                </button>
            </div>

        </form>
    </div>
</div>